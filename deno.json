{
  "name": "svelte-as-gun",
  "version": "0.1.0",
  "description": "Svelte 5 bindings for Gun.js - combining reactive data with declarative templates",
  "author": "kbristol <kbristol.plures.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plures/svelte-as-gun"
  },
  "module": "./src/mod.ts",
  "exports": {
    ".": "./src/mod.ts",
    "./runes": "./src/runes.ts", 
    "./actions": "./src/actions.ts",
    "./components": "./src/components.ts"
  },
  "files": [
    "src",
    "LICENSE.md",
    "README.md"
  ],
  "imports": {
    "svelte": "npm:svelte@5.0.0-next.1",
    "svelte/action": "npm:svelte@5.0.0-next.1/action",
    "svelte/store": "npm:svelte@5.0.0-next.1/store",
    "vitest": "npm:vitest"
  },
  "tasks": {
    "dev": "deno run --watch src/mod.ts",
    "test": "deno test -A tests/",
    "test:watch": "deno test -A --watch tests/",
    "check": "deno check src/mod.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt",
    "build": "deno run --allow-read --allow-write --allow-run scripts/build.ts",
    "publish": "deno run -A scripts/deno-publish.ts",
    "npm": "deno run -A scripts/npm.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns", "deno.unstable"],
    "jsx": "react-jsx",
    "jsxImportSource": "jsx"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/"]
  }
} 